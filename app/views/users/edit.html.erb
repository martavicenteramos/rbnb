<div class="container">
  <div class="row">
    <div class="col" id="edit">
      <%= simple_form_for @user do |f| %>
      <%= f.input :first_name%>
      <%= f.input :last_name%>
      <%= f.input :email %>
      <%= f.button :submit, "Update", class:"btn btn-primary" %>
      <% end %>
    </div>
    <div class="col">
      <%= simple_form_for(@user) do |f| %>
      <%= f.input :photo %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit 'Upload Photo', class: "btn btn-primary" %>
      <% end %>
    </div>

    <div class="col">
      <%= link_to 'Go back', user_path, class: 'btn btn-primary mt-1'%>
    </div>
  </div>
</div>
