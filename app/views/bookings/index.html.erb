<%= notice %>
<div class="container">
  <% if @bookings.length == 0 %>
    <h2 class="mt-5">You have no bookings, get yourself some!</h2>
    <%= link_to dogs_path, class: "btn btn-outline-primary" %>
  <% else %>
    <h2 class="mt-5">Here are your bookings: </h2>
    <% @bookings.each do |booking| %>
    <% if booking.dog.pictures.empty? %>
    <div class= "d-flex align-items-center">
      <div class="card-product">
        <%= image_tag "dog-face.png" %>
        <div class="card-product-infos">
          <h2>Booking from <strong><%= booking.start_date.strftime("%B %d %Y") %></strong> to <strong><%= booking.end_date.strftime("%B %d %Y")  %></strong></h2>
          <p>Dog name: <%= booking.dog.name %></p>
          <p>Location: <%= booking.dog.location %></p>
        </div>
      </div>
    <% else %>
    <div class= "d-flex align-items-center">
      <div class="card-product">
        <%= cl_image_tag booking.dog.pictures.first.photo %>
        <div class="card-product-infos">
          <h2>Booking from <strong><%= booking.start_date.strftime("%B %d %Y") %></strong> to <strong><%= booking.end_date.strftime("%B %d %Y")  %></strong></h2>
          <p>Dog name: <%= booking.dog.name %></p>
          <p>Location: <%= booking.dog.location %></p>
        </div>
      </div>
    <% end %>
      <div class="ml-5 align-items-center" id="edit-destroy-confirmed-booking">
        <% if booking.status == "pending" %>
          <%= link_to edit_booking_path(booking) do %>
            <i class="fas fa-pencil-alt m-5"></i>
          <% end %>
          <%= link_to booking_path(booking), method: :delete do %>
            <i class="far fa-trash-alt"></i>
          <% end %>
        <% else %>
          <i class="far fa-check-circle m-5"></i>
        <% end %>
      </div>
    </div>
    <% end %>
  <% end %>
</div>
